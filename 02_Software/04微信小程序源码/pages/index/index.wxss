/**index.wxss**/
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(19, 235, 55);
  font-size: 40px;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgb(141, 10, 10);
  font-size: 15px;
}

.chart-container {
  width: 100%;
  height: 500rpx;
  margin-top: 40rpx;
  background: rgba(255,255,255,0.8);
  border-radius: 16rpx;
}



.container {
  padding: 20px;
}

.avatar {
  width: 100px;
  height: 100px;
  border-radius: 50%; /* 使图片成为圆形 */
  border: 2px solid #ddd; /* 可选：添加边框 */
}

.data-list {
  margin-top: 20px;
}

.data-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.data-icon {
  width: 40px;
  height: 40px;
  margin-right: 10px;
}

.data-name {
  font-weight: bold;
  margin-right: 10px;
}

.data-value {
  color: #666;
}

/* app.wxss */
.background-container {
  position: relative;
  width: 100%;
  height: 100%;
}

.background-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.content-container {
  position: relative;
  z-index: 1;
}




